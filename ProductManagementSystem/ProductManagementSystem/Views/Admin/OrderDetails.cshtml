@model IEnumerable<ProductManagementSystem.DTO.OrderProductDTO>

@{
    ViewBag.Title = "OrderDetails";
}

<h2>OrderDetails</h2>

<a href="/Admin/Order" class="btn btn-outline-danger">Back</a>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<span><a href="/Admin/DeclineOrder/@Model.First().OId" class="btn btn-danger">Decline</a></span>
<span><a href="/Admin/AcceptOrder/@Model.First().OId" class="btn btn-success">Accept</a></span>

<br /><br />
